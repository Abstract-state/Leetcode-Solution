TimeToClose_Hours = 
VAR TimeText = TRIM(Sheet1[Time_To_Close])
VAR IsBlank = ISBLANK(TimeText)
VAR HasH = FIND("h", TimeText, 1, 0) > 0
VAR HasM = FIND("m", TimeText, 1, 0) > 0
VAR IsValid = NOT(IsBlank) && HasH && HasM
VAR PosH = FIND("h", TimeText)
VAR PosM = FIND("m", TimeText)
VAR Hours = VALUE(LEFT(TimeText, PosH - 1))
VAR Minutes = VALUE(TRIM(MID(TimeText, PosH + 1, PosM - PosH - 1)))
RETURN IF(IsValid, ROUND(Hours + (Minutes / 60), 2), BLANK())
